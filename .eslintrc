{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/babel",
    "prettier/react",
    "prettier/unicorn",
    "plugin:ramda/recommended",
    "adjunct"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["ramda", "react", "react-hooks", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "impliedStrict": true,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": [2, { "ignore": ["forwardRef"] }],
    "react/jsx-props-no-spreading": 0,
    "react/forbid-prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": true,
        "endOfLine": "lf"
      },
      {
        "usePrettierrc": true
      }
    ],
    "unicorn/consistent-function-scoping": 0,
    "unicorn/filename-case": 0,
    "unicorn/prevent-abbreviations": 0
  }
}
